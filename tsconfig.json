{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "noEmitOnError": true,
        "outDir": "./dist",
        "rootDirs": ["./lib", "./test"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true
}